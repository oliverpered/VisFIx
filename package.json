{
  "name": "PixelBug",
  "version": "0.0.5",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run concurrent",
    "concurrent": "concurrently --kill-others \"npm run dev:js\" \"npm run dev:css\" \"npm run dev:server\"",
    "bundle": "rollup -c && postcss app/index.css -o app/bundle.css",
    "dev:js": "rollup -c -w",
    "dev:css": "postcss app/index.css -o app/bundle.css -w",
    "dev:server": "browser-sync start --server 'app' --files 'app/index.html,app/bundle.css,app/bundle.js' --no-open",
    "extension": "rollup -c && npm run extension:css && npm run extension:copy && npm run extension:zip",
    "extension:css": "postcss app/extension.css -o extension/toolbar/bundle.css",
    "extension:copy": "cp app/bundle.js extension/toolbar/",
    "extension:zip": "mkdir ./pixelbug_v0.0.5 && cp -R ./extension/* ./pixelbug_v0.0.5/ && zip -r ./app/download/PixelBug.zip ./pixelbug_v0.0.5 && rm -rf ./pixelbug_v0.0.5",
    "deploy": "gcloud app deploy --project=google.com:atoms-sandbox"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ctrl/tinycolor": "^2.0.0",
    "blingblingjs": "^2.0.0",
    "hotkeys-js": "^3.3.5",
    "ragrid": "^1.0.5"
  },
  "devDependencies": {
    "browser-sync": "^2.24.6",
    "concurrently": "^3.5.1",
    "postcss": "^6.0.22",
    "postcss-cli": "^5.0.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "rollup": "^0.60.7",
    "rollup-plugin-node-resolve": "^3.3.0"
  }
}
